<resources>

    <!-- Base application theme. -->
    <style name="UI_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ui_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ui_colorPrimaryDark</item>
        <item name="colorAccent">@color/ui_colorAccent</item>
    </style>

    <style name="UI_AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">@dimen/ui_content_l</item>
    </style>

    <!--toolbar使用-->
    <style name="UI_AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="UI_AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
